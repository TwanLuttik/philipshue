{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/db/*": ["src/database/*"],
      "@/helpers/*": ["src/helpers/*"],
      "@/routes/*": ["src/routes/*"],
      "*": [
        "node_modules/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client"
  ]
}