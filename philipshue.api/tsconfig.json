{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "controllers/*": ["./src/controllers/*"],
      "db/*": ["./src/database/*"],
      "helpers/*": ["./src/helpers/*"],
      "routes/*": ["./src/routes/*"],
      "root/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client"
  ]
}